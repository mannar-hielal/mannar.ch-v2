/* globals jQuery, $, waitForKeyElements */
{
    "env": {
        "browser": true,
        "es2021": true,
        "jquery": true, // add jquery to global env
        "node": true
    },
    "extends": [
        "eslint:recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            4
        ], // 4 spaces
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ], // use single quote
        "semi": [
            "error",
            "always"
        ], // use semi colons
        "eol-last": [
            "error",
            "always"
        ] // add new line at end of file
    }
}